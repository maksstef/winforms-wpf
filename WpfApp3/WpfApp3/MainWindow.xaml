        <TextBox x:Name="txtScript" Height="30" TextWrapping="Wrap" Margin="110,-30,109.6,0" RenderTransformOrigin="0.356,1.404" TextChanged="TxtScript_TextChanged"/>
        <Label Content="enter script" Margin="107,-50,349.6,25"/>
