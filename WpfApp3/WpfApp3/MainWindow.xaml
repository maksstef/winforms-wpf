        <TextBox x:Name="txtbx32" Height="30" TextWrapping="Wrap" Margin="230,-30,229.6,0" RenderTransformOrigin="0.356,1.404" TextChanged="Txtbx32_TextChanged"/>


        <Button x:Name="btn4" Content="Delete" Width="90" Height="40"  Margin="11,10,460.6,0" Background="LightBlue" Click="Btn4_Click"/>
        <TextBox x:Name="txtbx4" Height="30" TextWrapping="Wrap" Margin="110,-30,349.6,0" RenderTransformOrigin="0.356,1.404" TextChanged="Txtbx4_TextChanged"/>

        <Button x:Name="Stored_Procedure" Content="StoredProcedur" Width="90" Height="40" Margin="11,10,460.6,0" Background="LightBlue" Click="Stored_Procedure_Click"/>

