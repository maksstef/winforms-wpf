        xmlns:local="clr-namespace:WpfApp3"
        mc:Ignorable="d"
        Title="MainWindow" Height="375" Width="569.81" WindowStartupLocation="CenterScreen">
    <StackPanel Margin="0,0,-6.8,-19.4">
        <Button x:Name="btn1" Content="Read" Width="90" Height="40" Margin="11,30,460.6,0" Background="LightBlue" Click="Btn1_Click"/>
        <Button x:Name="btn_sort" Content="Sort" Width="90" Height="40" Margin="111,-40,360.6,0" Background="LightBlue" Click="Btn_sort_Click"/>
        <Label Content="enter name" Margin="107,0,338.6,-25"/>
        <Label Content="enter ID" Margin="227,0,230.6,-25"/>
        <Label Content="enter size" Margin="347,0,122.6,-25"/>
        <!--<TextBox x:Name="txtbx1" Height="34" TextWrapping="Wrap" Margin="110,-40,350,0" RenderTransformOrigin="0.356,1.404"/>-->
        <Button x:Name="btn2" Content="Add" Width="90" Height="40" Margin="11,10,460.6,0" Background="LightBlue" Click="Btn2_Click"/>
        <Label Content="enter ID" Margin="107,0,349.6,-25"/>
        <Label Content="enter new name" Margin="227,0,229.6,-25"/>
        <TextBox x:Name="txtbx2" Height="30" TextWrapping="Wrap" Margin="110,-30,349.6,0" RenderTransformOrigin="0.356,1.404" TextChanged="Txtbx2_TextChanged"/>
        <TextBox x:Name="txtbx22" Height="30" TextWrapping="Wrap" Margin="230,-30,229.6,0" RenderTransformOrigin="0.356,1.404" TextChanged="Txtbx22_TextChanged"/>
        <TextBox x:Name="txtbx23" Height="30" TextWrapping="Wrap" Margin="350,-30,109.6,0" RenderTransformOrigin="0.356,1.404" TextChanged="Txtbx23_TextChanged"/>

